{
    "layer": "top",
    "modules-left": ["cpu", "memory", "temperature", "niri/workspaces"],
    "modules-center": ["mpris"],
    "modules-right": ["tray", "battery", "network", "wireplumber", "clock"],

    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "active": "<span font-family='JetBrainsMono Nerd Font' font='16'>‚óâ</span>",
            "default": "<span font-family='JetBrainsMono Nerd Font' font='16'>‚óã</span>"
        }
    },

    "tray": {
        "icon-size": 20,
        "spacing": 20
    },

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%b %d %Y}",
        "tooltip-format": "<span font-family='JetBrainsMono Nerd Font'>{calendar}</span>"
    },


"mpris": {
    "format": "{player_icon} {title} - {artist}",
    "format-paused": "{status_icon} <i>{title} - {artist}</i>",
    "max-length": 40,
    "interval": 3,
    "tooltip-format": "{player}: {artist} - {title}",
    "player-icons": {
